@inject IViewLocalizer Localizer
@model ExamCenterCreateViewModel

@{
    ViewData["Title"] = Localizer["Exam Center Create"];
    string returnUrl = ViewBag.ReturnUrl;
    string currentUrl = ViewBag.CurrentUrl;
}

<h1>@Localizer["Create Exam Center"]</h1>
<hr/>
<div class="row">
    <div class="col-md-12">
        <form asp-controller="@typeof(ExamCentersController).GetNameOfController()" asp-action="@nameof(ExamCentersController.Create)" asp-route-returnUrl="@returnUrl" methode="post">
            <div class="form-group row">
                <label asp-for="CompanyID" class="col-sm-2 col-form-label"></label>
                <div class="input-group col-sm-10">
                    <select asp-for="CompanyID" class="form-control" asp-items="@Model.CompanySelectList">
                        <option value="" selected disabled hiden>@Localizer["Chooze Company"]</option>
                    </select>
                    <div class="input-group-append">
                        <a class="btn btn-primary" type="b" asp-controller="@typeof(CompaniesController).GetNameOfController()" asp-action="@nameof(CompaniesController.Create)" asp-route-ReturnUrl="@currentUrl">@Localizer["Create"]</a>
                    </div>
                    <div class="input-group-append">
                        <input class="btn btn-primary" type="button" value="@Localizer["Clear"]" />
                    </div>
                </div>
                <span asp-validation-for="CompanyID" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="IsActive" class="col-sm-2 col-form-label"></label>
                <div class="input-group col-sm-10">
                    <input asp-for="IsActive" class="form-check-inline" style="margin-left:0"/>
                </div>
                <span asp-validation-for="IsActive" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-sm-12">
                    <button type="submit" class="btn btn-primary" style="width:auto">@Localizer["Save"]</button>
                    <a href="@returnUrl" class="btn btn-primary" style="width:auto">@Localizer["Cancel"]</a>
                </div>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/ResetSelect.js"></script>
}